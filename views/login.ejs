<%- include('partials/header') %>

<div class="container mt-5 pt-5">

  <h1>Login</h1>

  <div class="row p-3">
    <div class="col-sm-8">
      <div>
        <div class="card-body">

          <form id="contact-form" action="/login" method="POST">
            <div class="form-group mb-3">
              <label class="mb-2" for="email">Email</label>
              <input type="email" required class="form-control" name="username">
            </div>
            <div class="form-group">
              <label class="mb-2" for="password">Password</label>
              <input type="password" required class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark mt-2">Login</button>
          </form>
          
        </div>
        <p>New Member ? <a href="/register">Register</a></p>
      </div>
    </div>

    <div class="col-sm-4">
        <div class="card-body">
          <a class="btn btn-block mb-2 btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign In with Google
          </a>
          <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
            <i class="fab fa-facebook"></i>
            Sign In with Facebook
          </a>
        </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>
